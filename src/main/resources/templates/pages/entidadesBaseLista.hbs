{{#partial "titulo"}}
Entidades base
{{/partial}}


{{#partial "contenido"}}
<div class="row">
    <div class="col-md-9">
        <form method="get" action="/entidadesBase" class="row">
            <div class="col-md-5">
                <label>Categoría</span>
                <select class="custom-select" name="categoria_id">
                  {{#with categoriaSeleccionada}}
                  <option value="{{id}}" selected hidden>{{nombre}}</option>
                  {{/with}}
                  <option value>Todas las categorias</option>
                  {{#each categorias}}
                  <option value="{{id}}">{{nombre}}</option>
                  {{/each}}
                </select>
            </div>
            <div class="col-md-5">
                <label>Entidad jurídica</span>
                <select class="custom-select" name="entidad_juridica_id">
                  {{#with entidadJuridicaSeleccionada}}
                  <option value="{{id}}" selected hidden> {{cuit}} - {{razonSocial}} </option>
                  {{/with}}
                  <option value>Todas las entidades</option>
                  {{#each entidadesJuridicas}}
                  <option value="{{id}}"> {{cuit}} - {{razonSocial}} </option>
                  {{/each}}
                </select>
            </div>
            <div class="col-md-2 mt-4">
                <input type="submit" class="btn btn-secondary" value="Buscar"/>
            </div>
        </form>
    </div>
    <div class="col-md-3 text-md-right  mt-4">
        <a href="/entidadesBase/new" class="btn btn-info">
            Nueva entidad
        </a>
    </div>
</div>
<div class="table-responsive">
  <table class="table table-hover table-striped table-bordered w-100">
    <thead class="thead-dark">
        <tr>
          <th scope="col">Descripcion</th>
          <th scope="col">Nombre ficticio</th>
          <th scope="col">Categoría</th>
          <th scope="col">Entidad jurídica</th>
          <th scope="col" class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each entidadesBase}}
        <tr>
            <td class="align-middle"> {{ descripcion }} </td>
            <td class="align-middle"> {{ nombreFicticio }} </td>
            <td class="align-middle"> {{ categoria.nombre }} </td>
            <td class="align-middle"> {{ entidadJuridica.cuit }} - {{ entidadJuridica.razonSocial }}</td>
            <td class="text-center align-middle">
                <a href="/entidadesBase/{{ id }}">Editar</a>
            </td>
        </tr>
        {{/each}}
      </tbody>
  </table>
</div>

{{/partial}}


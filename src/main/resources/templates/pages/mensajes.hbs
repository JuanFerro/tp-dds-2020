{{#partial "titulo"}}
Bandeja de mensajes
{{/partial}}

{{#partial "contenido"}}

<div class="row mb-3">
    <div class ="col">
        <div class="btn-group" role="group" aria-label="Basic example">
            <a href="/mensajes" class="btn btn-light {{#if activeTodos}}active{{/if}}">
                Todos los mensajes
            </a>
            <a href="/mensajes?noVistos=1" class="btn btn-light {{#if activeNoVistos}}active{{/if}} {{#if sinMensajesNuevos}}disabled{{/if}}">
                No vistos ({{cantidadNoVistos}})
            </a>
        </div>
    </div>
</div>
<div class="table-responsive">
  <table class="table table-hover table-striped table-bordered w-100">
    <thead class="thead-dark">
        <tr>
          <th scope="col">Mensaje</th>
          <th scope="col"># Egreso - Proveedor</th>
          <th scope="col" class="text-center"></th>

        </tr>
      </thead>
      <tbody>
        {{#each mensajes}}
        <tr class="{{#if visto}}{{else}}font-weight-bold table-info{{/if}}">
            <td class="align-middle"> {{ contenido }} </td>
            <td class="align-middle"><a href="/egresos/{{egreso.id}}"> {{ egreso.id }} - {{ egreso.proveedor.razonSocial }} </a></td>
            <td class="align-middle text-center p-0">
                <form method="post" action="/mensajes/{{id}}" style="margin:0">
                    <input type="submit" class="btn btn-link {{#if visto}}d-none{{/if}}" value ="Marcar como visto">
                </form>
            </td>
        </tr>
        {{/each}}
      </tbody>
  </table>
</div>
{{/partial}}

{{>logged-layout.hbs}}
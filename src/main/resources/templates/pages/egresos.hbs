{{#partial "titulo"}}
    Egresos
{{/partial}}

{{#partial "contenido"}}

    <blockquote>
        <div class="col-md-13  text-md-right  mt-4">
            <a href="/egresos/new/step1" class="btn btn-info">
                Nuevo egreso
            </a>
        </div>
    </blockquote>

    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered w-100">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Numero</th>
                <th scope="col">Total</th>
                <th scope="col">Fecha</th>
                <th scope="col">Proveedor</th>
                <th scope="col" class="text-center"></th>
            </tr>
            </thead>
            <tbody>
            {{#each egresos}}
                <tr>
                    <td class="align-middle"> {{ id }}</td>
                    <td class="align-middle"> {{ totalOperacion }}</td>
                    <td class="align-middle"> {{ fechaFormateada }}</td>
                    <td class="align-middle"> {{ proveedor.razonSocial }}</td>
                    <td class="align-middle text-center"> <a href="/egresos/{{id}}">Detalles</a> </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

{{/partial}}

{{>logged-layout.hbs}}